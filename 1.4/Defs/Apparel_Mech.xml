    <!-- Prestige Mechcommander Helmet -->

    <ThingDef ParentName="ApparelArmorHelmetMechanitorBase">
        <defName>Apparel_ArmorHelmetPrestigeMechCommander</defName>
        <label>prestige mechcommander helmet</label>
